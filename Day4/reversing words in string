package com.vc;

public class day4RevWordInString {

	public static void main(String[] args) {
		String s="palle technologies pvt ltd";
		String[] sarr=s.split(" ");
		for(int i=0;i<sarr.length;i++) {
			String word=sarr[i];
			for(int j=word.length()-1;j>=0;j--) {
				System.out.print(word.charAt(j));
			}
			System.out.print(" ");
		}
	}

}
